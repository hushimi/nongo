<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MySQLTables" targetRuntime="MyBatis3">
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- データベース接続設定 -->
        <jdbcConnection
            driverClass="com.mysql.cj.jdbc.Driver"
            connectionURL="jdbc:mysql://localhost:3306/nongodb"
            userId="admin"
            password="secret">
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <!-- Javaモデル生成設定 -->
        <javaModelGenerator targetPackage="bushigen.nongo.model" targetProject="src/main/java" />

        <!-- Mapperインターフェース生成設定 -->
        <javaClientGenerator type="ANNOTATEDMAPPER" targetPackage="bushigen.nongo.dao.generated" targetProject="src/main/java" />

        <!-- テーブル設定 -->
        <table tableName="software_engineer" domainObjectName="SoftwareEngineer">
            <generatedKey column="id" sqlStatement="MYSQL" identity="true"/>
        </table>
        <table tableName="users" domainObjectName="Users">
            <generatedKey column="id" sqlStatement="MYSQL" identity="true"/>
        </table>
    </context>
</generatorConfiguration>
